          /* Second row */
          [
            { "items": [ { "markup": [ "light" ], "text": "Biotype" } ], "type": "block" },
            { "items": [ { "markup": [ ], "text": <8s> } ], "type": "block" }
          ],
          [
            {
              "items": [{ "markup": ["light"], "text": <3s> }],
              "type": "block"
            }
          ],
          [
            {
              "items": [{ "markup": ["light"], "text": <9s> }],
              "type": "block"
            }
          ]
        ],
        "metadata": {
          "designation": <1s>,
          "gene_id": <5s>,
          "strand": <3s>,
          "track": <6s>,
          "transcript_biotype": <2s>,
          "type": "transcript",
