{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "egs",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#numeric"
		},
		{
			"include": "#comments"
		}

	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.egs",
				"match": "\\b(reserved|struct|enum|func|proc|expr|stmt|inline|import|becomes|mask|stomp|module|use|boolean|number|string|bytes|vec)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function.egs",
				"match": "\\b([A-Za-z_][A-Za-z0-9_]+)(?=\\()"
			}]
		},
		"strings": {
			"name": "string.quoted.double.egs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.egs",
					"match": "\\\\."
				}
			]
		},
		"numeric": {
			"patterns": [{
				"name": "constant.numeric.float.egs",
				"match": "-?([0-9]+)(\\.[0-9]+)?"
			}]
		},
		"comments": {
			"patterns": [
				{
				"name": "comment.line.egs",
				"begin": "//",
				"end": "\n"

				},
				{
				"name":"comment.block.egs",
				"begin": "\/[*]",
				"end": "[*](\/)"
				}
			]
		}
	},
	"scopeName": "source.egs"
}